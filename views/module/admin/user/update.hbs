<link rel="stylesheet" href="../css/style.css">
<script src="../js/connectAPI.js"></script>
<script src="../js/handle.js"></script>
<script src="../js/handleAdmin.js"></script>

<div class="container mt-3">
    {{body.user._id}}
    <div class="row">
        <div>
            <h1 class="text-info">CHỈNH SỬA TÀI KHOẢN</h1>
        </div>
        {{!-- <form method="post" enctype="multipart/form-data"> --}}
        <div>
            <div class="form-group">
                <label>Số điện thoại: </label>
                <h3>{{body.user.phoneNumber}}</h3>
            </div>

            <div class="form-group">
                <label>Họ tên: </label>
                <input class="form-control" id="fullname" value="{{body.user.name}}"></input>
            </div>

            <div class="form-group">
                <label>Địa chỉ: </label>
                <textarea class="form-control" rows="1" cols="50" name="address">{{body.user.address}}</textarea>
            </div>

            <div class="form-group">
                <label>Địa chỉ facebook: </label>
                <input class="form-control" id="facebook" value="{{body.user.facebook}}">
            </div>

            <div class="form-group">
                <label>Email: </label>
                <input class="form-control" id="email" value="{{body.user.email}}">
            </div>

            <div class="form-group">
                <label>Giới tính: </label>&nbsp
                <select id="gender" class="btn btn-outline-info ml-2">
                    <option value="1" {{#if body.user.gender}}selected {{/if}}>Nam</option>
                    <option value="0" {{#unless body.user.gender}}selected {{/unless}}>Nữ</option>
                </select>
            </div>

            <div class="form-group">
                <label>Ngày tham gia: {{ body.user.created_at }}</label>
            </div>

            <div class="form-group">
                <label>Chỉnh sửa gần đây nhất: {{ body.user.updated_at }}</label>
            </div>
           
            <div class="form-group">
                <label>Trạng thái: </label>
                <select id="gender" class="btn btn-outline-primary ml-2">
                    <option value="1" {{#if body.user.status}} selected {{/if}}>Hoạt động</option>
                    <option value="0" {{#unless body.user.status}} selected {{/unless}}>Khóa</option>
                </select>
            </div>

            <div class="form-group">
                <label>Ghi chú: </label>
                <textarea class="form-control" rows="1" cols="50" id="note"></textarea>
            </div>

            <div class="form-group">
                <label>Loại tài khoản: </label>
                <select id="role" class="btn btn-outline-warning ml-3">
                    <option value="isUser" {{#if body.user.isUser}} selected {{/if}}>Người dùng</option>
                    <option value="isEmployee" {{#if body.user.isEmployee}} selected {{/if}}>Nhân viên</option>
                    <option value="isAdmin" {{#if body.user.isAdmin}} selected {{/if}}>Admin</option>
                </select>
            </div>

            <!-- Nút Xác nhận Lưu, Hủy -->
            <button type="submit" class="btn btn-outline-success font-weight-bold" id="luu">Lưu</button>
            <button class="btn btn-outline-danger ml-3" id="huy">Hủy</button>
        </div>
        {{!-- </form> --}}
    </div>
</div>

<script>
    TH_avatar.src = '../images/login_icon2.png';

    huy.onclick = () => {
        window.location = Dia_chi_Dich_vu + '/admin/user';
    }

    luu.onclick = () => {
        
    }
</script>